<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:id="@+id/parent_layout_cultura"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/CardCultura"
        android:layout_width="410dp"
        android:layout_height="146dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        app:cardBackgroundColor="#659251"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:id="@+id/tvCultura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="@string/tomate"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/rlInfoCultura"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/CardCultura"
            android:layout_gravity="bottom"
            android:background="#FDFDFD"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvNumTalhoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/x_talh_es" />

            <TextView
                android:id="@+id/tvContagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/dias_para_a_contagem_x" />

            <ImageView
                android:id="@+id/ivStatusCultura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_status"
                android:contentDescription="TODO" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>