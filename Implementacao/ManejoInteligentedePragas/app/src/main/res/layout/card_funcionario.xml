<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout_funcionario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/CardFuncionario"
        android:layout_width="410dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"


        android:padding="15dp"
        app:cardBackgroundColor="#939393"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp">

        <TextView
            android:id="@+id/tvNomeFuncionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:text="@string/nomefuncionario"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />


        <RelativeLayout
            android:id="@+id/rlInfoFunc"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/CardFuncionario"
            android:layout_gravity="bottom"
            android:background="#FDFDFD"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvEmailFunc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="@string/exemplo_gmail_com" />

            <TextView
                android:id="@+id/tvTelefoneFunc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEmailFunc"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="@string/_32987654321" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>